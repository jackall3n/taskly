{
  "files": [
    "src/server.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": false,
    "target": "es6",
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": [ "node_modules/@types" ],
    "paths": {
      "*": [
        "node_modules/@types/*",
        "./src/types/*",
        "./typings/*"
      ]
    }
  }
}